apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: helm-tutorial
spec:
  destination:
    name: ''
    namespace: helm-tutorial
    server: 'https://kubernetes.default.svc'
  source:
    path: nginx-chart
    repoURL: 'https://github.com/silvinux/helm-tutorial.git'
    targetRevision: gh-pages
    helm:
      valueFiles:
        - values.yaml
      parameters:
        - name: image.tag
          value: 0.1.x
  sources: []
  project: default
  syncPolicy:
    automated:
      prune: true
      selfHeal: true
    syncOptions:
      - CreateNamespace=true
